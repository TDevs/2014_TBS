@{
    ViewBag.Title = "Member - Vehicle";
}
@*@Scripts.Render("~/bundles/ngVehicle")*@
<script src="~/Scripts/app/member/ng-vehicle.js"></script>
<div class="row" ng-controller="VehicleListController">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Vehicle
                </div>
                <div class="actions">
                    <a href="#" class="btn blue" ng-click="AddVehicle()">
                        <i class="fa fa-plus"></i> Add
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="tblVehicle">
                    <thead>
                        <tr>
                            <th>
                                License Number.
                            </th>
                            <th>
                                License State
                            </th>
                            <th>
                                Make
                            </th>
                            <th>
                                Model
                            </th>

                            <th>
                                Year
                            </th>
                            <th>
                                EIN
                            </th>
                            <th>
                                VIN
                            </th>
                            <th>
                                Medallion#
                            </th>
                            <th>
                                Underserved
                            </th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="vehicle in vehicle.Vehicles">
                            <td>
                                {{vehicle.LicenseNumber}}
                                <input type="hidden" ng-model="vehicle.Id" />
                            </td>
                            <td>
                                {{vehicle.LicenseState}}
                            </td>
                            <td>
                                {{vehicle.VehicleMake.Name}}
                            </td>
                            <td>
                                {{vehicle.VehicleModel.Name}}
                            </td>
                            <td>
                                {{vehicle.ModelYear}}
                            </td>
                            <td>
                                {{vehicle.EINNumber}}
                            </td>
                            <td>
                                {{vehicle.VINNumber}}
                            </td>
                            <td>
                                {{vehicle.Medallion}}
                            </td>
                            <td align="center">
                                <input type="checkbox" readonly ng-model="vehicle.UnderServed" />
                            </td>
                            <td></td>
                            <td align="center">
                                <a href="#" title="Edit" ng-click="EditVehicler(vehicle)">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="#" title="Delete" ng-click="DeleteVehicle(vehicle)">
                                    <i class="fa fa-ban"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


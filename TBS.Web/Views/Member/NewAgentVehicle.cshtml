<form class="form-horizontal" name="frmStockholder" novalidate>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Create New Agent Vehicle</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-md-3 control-label">Vehicle </label>
            <div class="col-md-7">
                <select class="form-control" ng-model="AgentVehicle.VehicleId" name="VehicleId" required>
                    <option ng-repeat="vehicle in VehicleList" value="{{vehicle.Id}}">{{vehicle.LicenseNumber}}</option>
                </select>
                
                <span style="color: #ff0000" ng-show="IsSubmitted && frmStockholder.VehicleId.$error.required">Vehicle is required
                </span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-6">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" ng-model="AgentVehicle.AgentFee" name="AgentFee">Agent Fee
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Save" class="btn btn green" ng-click="Save(frmStockholder.$invalid)" />
            <input type="button" value="Cancel" class="btn btn-default" ng-click="Cancel()" />
        </div>
    </div>

</form>

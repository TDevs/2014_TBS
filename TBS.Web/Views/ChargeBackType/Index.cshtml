@Scripts.Render("~/bundles/ngchargebacktype")
<div class="row" ng-controller="ChargeBackTypeListController">
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bars"></i>Charge Back Types
            </div>
            <div class="actions">
                <a href="#" class="btn blue" ng-click="AddChargeBackType()">
                    <i class="fa fa-pencil"></i>Add
                </a>
                 <div class="btn-group">
                        <a class="btn default" href="" data-toggle="dropdown">Columns <i class="fa fa-angle-down"></i>
                        </a>
                        <div id="tblChargeBackType_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                            <label>
                                <input type="checkbox" checked data-column="0">Type</label>
                            <label>
                                <input type="checkbox" checked data-column="1">Description</label>
                          
                        </div>
                    </div>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="tblChargeBackType" paging-table aa-data="ChargeBackTypeList">
                <thead>
                    <tr>                         
                        <th>Type
                        </th>
                        <th>Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="chargeBackTypeItem in ChargeBackTypeList">                         
                        <td>{{chargeBackTypeItem.Name}}</td>
                        <td>{{chargeBackTypeItem.Description}}</td>
                        <td>
                            <a href="#" ng-click="EditChargeBackType(chargeBackTypeItem)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" ng-click="DeleteChargeBackType(chargeBackTypeItem)">
                                <i class="fa fa-ban"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

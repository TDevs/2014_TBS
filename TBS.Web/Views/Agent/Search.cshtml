<script>
    jQuery(document).ready(function () {
        var id = location.hash.substr(1);
        if (id == '/Agent/Search') {
            $("#search").attr("class", "active");
        }
        else {
            location.href = '#/Agent/Search';
            $("#search").attr("class", "active");
        }
    });
</script>

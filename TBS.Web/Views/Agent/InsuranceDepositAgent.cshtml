<div class="tab-pane active">
    <div class="row" ng-controller="CashieringAgentController">
        <div class="col-md-3">
            @Html.Partial("_AgentMenu")
        </div>
        <div class="col-md-9">
            <div class="portlet box grey" ng-controller="InsuranceDepositAgentController">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-reorder"></i>
                        Insurance Deposit
                    </div>
                </div>
                <div class="portlet-body form">
                    <form name="frm" novalidate class="form-horizontal">
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <!--Content-->
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Vehicle Number</label>
                                    <div class="col-md-6">
                                        <select class="form-control" name="AgentVehicleId" ng-model="InsuranceDeposit.AgentVehicleId" ng-change="AgentVehicleChange(InsuranceDeposit.AgentVehicleId)" required>
                                            <option ng-repeat="agentvehicle in AgentVehicleList" value="{{agentvehicle.AgentVehicleId}}">{{agentvehicle.Vehicle.LicenseNumber}}</option>
                                        </select>
                                        <span style="color: #ff0000" ng-show="IsSubmitted && frm.MedallionId.$error.required">Lisence Number is required
                                        </span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Deposit Amount</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" name="DepositAmount" ng-model="InsuranceDeposit.DepositAmount" input-mask="{mask:9999.99}" ng-type="decimal" required>
                                        <span style="color: #ff0000" ng-show="IsSubmitted && frm.DepositAmount.$error.required">Deposit Amount is required
                                        </span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-md-3 control-label">Start Date</label>
                                    <div class="col-md-6">
                                        <div class="input-group input-medium date date-picker">
                                            <input type="text" class="form-control" readonly="" name="StartDate" datetime-picker="mm/dd/yyyy" ng-model="InsuranceDeposit.StartDate" required>
                                            <span class="input-group-btn">
                                                <button class="btn default" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                        <span style="color: #ff0000" ng-show="IsSubmitted && frm.StartDate.$error.required">Start Date is required
                                        </span>

                                    </div>
                                </div>



                                <div class="form-group">
                                    <label class="col-md-3 control-label">Weekly Payment</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" name="WeeklyPayment" ng-model="InsuranceDeposit.WeeklyPayment" input-mask="{mask:9999.99}" ng-type="decimal" required>
                                        <span style="color: #ff0000" ng-show="IsSubmitted && frm.WeeklyPayment.$error.required">Weekly Payment is required
                                        </span>
                                    </div>
                                </div>
                                <!--End Content-->

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Total Paid</label>
                                    <div class="col-md-6">
                                        <label class="control-label" ng-model="InsuranceDeposit.TotalPaid">{{InsuranceDeposit.TotalPaid}}</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Current Balance</label>
                                    <div class="col-md-6">
                                        <label class="control-label" ng-model="InsuranceDeposit.CurrentBalance">{{InsuranceDeposit.CurrentBalance}}</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Comments</label>
                                    <div class="col-md-6">
                                        <textarea type="text" class="form-control" name="Comments" ng-model="InsuranceDeposit.Comments"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Status</label>
                                    <div class="col-md-6">
                                        <label class="control-label">{{InsuranceDeposit.Status}}</label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                    <div class="form-actions nobg fluid">
                        <div class="col-md-offset-5 col-md-9">
                            <button type="button" class="btn btn green" ng-click="Save(frm.$invalid)">Save   </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

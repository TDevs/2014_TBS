<form class="form-horizontal" name="frmEditVender" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Edit Vender </h4>
    </div>
    <div class="modal-body">

        <div class="form-group">
            <label class="control-label col-md-3">Name: </label>
            <div class="col-md-8">
                <input ng-model="vender.Name" name="Name" required class="form-control" />
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted && frmEditVender.Name.$error.required">Name is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Address: </label>
            <div class="col-md-8">
                <input ng-model="vender.Address" name="Address" required class="form-control" />
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted &&frmEditVender.Address.$error.required">Address is required.</span>
                </small>
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Addess1: </label>
            <div class="col-md-8">
                <input ng-model="vender.Address1" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">City: </label>
            <div class="col-md-8">
                <input ng-model="vender.City" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">State: </label>
            <div class="col-md-8">
                <select ng-model="vender.State" name="State" required class="form-control">
                    <option ng-repeat="s in state" ng-value="s">{{s}}</option>
                </select>
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted &&frmEditVender.State.$error.required">State is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Zip: </label>
            <div class="col-md-8">
                <input type="text" id="mask_zip1" ng-model="vender.Zip" name="Zip" required class="form-control" input-mask="{mask:'99999'}" ng-Type="phone"/>
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted &&frmEditVender.Zip.$error.required">Zip is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Comment: </label>
            <div class="col-md-8">
                <textarea ng-model="vender.Comment" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Airtime Fee (Monthly): </label>
            <div class="col-md-8">
                <input ng-model="vender.Airtime" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Phone 1: </label>
            <div class="col-md-8">
                <input type="text" id="mask_phone1" ng-model="vender.Phone1" name="Phone1" format="phone" required class="form-control" input-mask="{mask:'999-999-9999'}" ng-type="phone"/>
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted && frmEditVender.Phone1.$error.required">Phone 1 is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Phone 2: </label>
            <div class="col-md-8">
                <input type="text" id="mask_phone2" ng-model="vender.Phone2" class="form-control" input-mask="{mask:'999-999-9999'}" ng-type="phone"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Fax: </label>
            <div class="col-md-8">
                <input type="text" id="mask_fax1" ng-model="vender.Fax" name="Fax" class="form-control" input-mask="{mask:'999-999-9999'}" ng-type="phone"/>
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted && frmEditVender.Fax.$error.required">Fax is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Email: </label>
            <div class="col-md-8">
                <input ng-model="vender.Email" class="form-control" name="Email" type="email"/>
                <small style="color: #ff0000">
                    <span ng-show="IsSubmitted && frmEditVender.Email.$error.email">Email invalid.</span>
                </small>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Save" class="btn btn-default btn green" ng-click="Save(frmEditVender.$invalid)" />
            <input type="button" value="Cancel" class="btn btn-default" ng-click="Cancel()" />
        </div>
    </div>
</form>

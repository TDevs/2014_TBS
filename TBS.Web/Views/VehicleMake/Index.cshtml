
@Scripts.Render("~/bundles/ngvehiclemake")
<div class="row" ng-controller="VehicleMakeListController">
     <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bars"></i>Vehicle Makes
            </div>
            <div class="actions">
                <a href="#" class="btn blue" ng-click="AddVehicleMake()">
                    <i class="fa fa-pencil"></i>Add
                </a>
                 <div class="btn-group">
                    <a class="btn default" href="#" data-toggle="dropdown">Columns <i class="fa fa-angle-down"></i>
                    </a>
                    <div id="tblVehicleMake_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                        <label>
                            <input type="checkbox" checked data-column="0">Vehicle Make Name</label>                                     
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="tblVehicleMake" aa-data="VehicleMakeList" paging-table>
                <thead>
                    <tr>                            
                        <th>Vehicle Make Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="vehicleMakeItem in VehicleMakeList">                            
                        <td>{{vehicleMakeItem.Name}}</td>
                        <td>
                            <a href="#" ng-click="EditVehicleMake(vehicleMakeItem)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" ng-click="DeleteVehicleMake(vehicleMakeItem)">
                                <i class="fa fa-ban"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

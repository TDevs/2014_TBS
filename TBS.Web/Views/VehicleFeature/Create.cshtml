<form class="form-horizontal" name="frmEditVehicleFeature" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Create New Vehicle Feature</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label col-md-4">Feature Name: </label>
            <div class="col-md-7">
                <input ng-model="vehicleFeatureItem.Name" name="Name" required class="form-control" />
                <small style="color:#ff0000">
                    <span class="error" ng-show="IsSubmitted && frmEditVehicleFeature.Name.$error.required">Name is required.</span>
                </small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Feature Description: </label>
            <div class="col-md-7">
                <textarea ng-model="vehicleFeatureItem.Description" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Save" class="btn btn-default btn green" ng-click="SaveVehicleFeature(frmEditVehicleFeature.$invalid)" />
                <input type="button" value="Cancel" class="btn btn-default" ng-click="Cancel()" />
            </div>

        </div>
    </div>
</form>


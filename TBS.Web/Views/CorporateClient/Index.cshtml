@Scripts.Render("~/bundles/ngcorporateclient")
<div class="row" ng-controller="CorporateClientListController">
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bars"></i>Corporate Client
            </div>
            <div class="actions">
                <a href="#" class="btn blue" ng-click="AddCorporateClient()">
                    <i class="fa fa-pencil"></i>Add
                </a>
                <div class="btn-group">
                    <a class="btn default" href="#" data-toggle="dropdown">Columns <i class="fa fa-angle-down"></i>
                    </a>
                    <div id="tblCorporateClient_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                        <label>
                            <input type="checkbox" checked data-column="0">Name</label>
                        <label>
                            <input type="checkbox" checked data-column="1">City</label>
                        <label>
                            <input type="checkbox" checked data-column="2">State</label>
                        <label>
                            <input type="checkbox" checked data-column="3">Phone 1</label>
                        <label>
                            <input type="checkbox" checked data-column="4">Fax</label>
                        <label>
                            <input type="checkbox" checked data-column="5">Email</label>

                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="tblCorporateClient" aa-data="CorporateClientList" paging-table>
                <thead>
                    <tr>

                        <th>Name
                        </th>
                        <th>City
                        </th>
                        <th>State
                        </th>
                        <th>Phone 1
                        </th>
                        <th>Fax
                        </th>
                        <th>Email
                        </th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    <tr ng-repeat="corporateclient in CorporateClientList">

                        <td>{{corporateclient.Name}}
                        </td>
                        <td>{{corporateclient.City}}
                        </td>
                        <td>{{corporateclient.State}}
                        </td>
                        <td>{{corporateclient.Phone1}}
                        </td>
                        <td>{{corporateclient.Fax}}
                        </td>
                        <td>{{corporateclient.Email}}
                        </td>
                        <td>
                            <a href="#" ng-click="EditCorporateClient(corporateclient)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" ng-click="DeleteCorporateClient(corporateclient);"><i class="fa fa-ban"></i></a>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/ngmetermanufacturer")
<div class="row" ng-controller="MeterManufacturerListController">
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bars"></i>Meter Manufacturers
            </div>
            <div class="actions">
                <a href="#" class="btn blue" ng-click="AddMeterManufacturer()">
                    <i class="fa fa-pencil"></i>Add
                </a>
                 <div class="btn-group">
                    <a class="btn default" href="#" data-toggle="dropdown">Columns <i class="fa fa-angle-down"></i>
                    </a>
                    <div id="tblMeterManufacturer_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                        <label>
                            <input type="checkbox" checked data-column="0" />Meter Manufacture</label>   
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="tblMeterManufacturer" aa-data="MeterManufacturerList" paging-table>
                <thead>
                    <tr>                           
                        <th>
                            Meter Manufacturer Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="meterManufacturerItem in MeterManufacturerList">
                        
                        <td>{{meterManufacturerItem.Description}}</td>
                        <td>
                            <a href="#" ng-click="EditMeterManufacturer(meterManufacturerItem)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" ng-click="DeleteMeterManufacturer(meterManufacturerItem)">
                                <i class="fa fa-ban"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

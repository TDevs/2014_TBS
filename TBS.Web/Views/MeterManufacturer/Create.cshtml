<form class="form-horizontal" name="frmAddMeterManufacturer" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="Cancel()" ></button>
        <h4 class="modal-title">Create New Meter Manufacturer</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label col-md-3">Description: </label>
            <div class="col-md-8">
                <input ng-model="meterManufacturerItem.Description" name="Description" required class="form-control" />
                <small style="color: #ff0000">
                    <span class="error" ng-show="IsSubmitted && frmAddMeterManufacturer.Description.$error.required">Description is required.</span>
                </small>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Save" class="btn btn-default btn green" ng-click="SaveMeterManufacturer(frmAddMeterManufacturer.$invalid)" />
                <input type="button" value="Cancel" class="btn btn-default" ng-click="Cancel()" />
            </div>

        </div>
    </div>
</form>


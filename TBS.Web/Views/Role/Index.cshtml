@{
    ViewBag.Title = "Manage Roles";
}
@Scripts.Render("~/bundles/ngRoles")
<div class="row" ng-controller="RoleListController">
    <div class="col-md-12" ng-show="role.RoleCanViewList">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-users"></i>Manage Roles
                </div>
                <div class="actions">
                    <a href="#" class="btn blue" ng-show="role.RoleCanCreate" ng-click="AddRole()">
                        <i class="fa fa-plus"></i>Add
                    </a>
                    <div class="btn-group">
                        <a class="btn default" href="#" data-toggle="dropdown">Columns <i class="fa fa-angle-down"></i>
                        </a>
                        <div id="tblRole_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                            <label>
                                <input type="checkbox" checked data-column="0" />Name</label>
                            <label>
                                <input type="checkbox" checked data-column="1" />Desciption</label>
                            <label>
                                <input type="checkbox" checked data-column="2" />Predefined</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="tblRole" aa-data="Roles" paging-table>
                    <thead>
                        <tr>
                            <th>Name
                            </th>
                            <th>Description
                            </th>
                            <th>Predefined
                            </th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="r in Roles">
                            <td>{{r.Name}}
                            </td>
                            <td>{{r.Description}}
                            </td>
                            <td>{{r.Predefined}}
                            </td>
                            <td align="center">
                                <a href="#" title="Edit" ng-show="role.RoleCanEdit" ng-click="EditRole(r)">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="#" title="Delete" ng-show="role.RoleCanDelete" ng-click="DeleteRole(r)">
                                    <i class="fa fa-ban"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


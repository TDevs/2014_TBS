<form class="form-horizontal" id="frmUserRole" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="cancel" aria-hidden="true" ng-click="Cancel()"></button>
        <h4 class="modal-title">User Roles</h4>
    </div>
    <div class="modal-body">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="tblUser">
                <thead>
                    <tr>
                        <th>
                            Access
                        </th>
                        <th>
                            Roles
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="role in Roles">
                        <td align="center">
                            <input type="checkbox" ng-model="role.IsInRole" ng-click="EditUserRole(role.RoleId)" />
                        </td>
                        <td>
                            {{role.Name}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-9">
            <input type="button" value="Save" class="btn btn green" ng-click="Save(frmUserRole.$invalid)" />
            <input type="button" value="Cancel" class="btn btn-default" ng-click="Cancel()" />
        </div>
    </div>
</form>